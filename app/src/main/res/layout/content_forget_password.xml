<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.trungdinh.mybanking.ForgetPassword"
    tools:showIn="@layout/activity_forget_password">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:columnCount="4">




        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="75px"
            android:layout_height="wrap_content"
            android:text="Get Password by DOD"
            android:id="@+id/textView2"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnSpan="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input Name"
            android:id="@+id/textView3"
            android:layout_row="2"
            android:layout_column="1" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Input Name"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_row="2"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input DOD (MM-DD-YY)"
            android:id="@+id/textView4"
            android:layout_row="3"
            android:layout_column="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_row="3"
            android:layout_column="2" />


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:onClick="onSubmitDOD"
            android:id="@+id/button"
            android:layout_row="4"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Password with 2 Questions"
            android:id="@+id/textView5"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_columnSpan="3"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question 1:"
            android:id="@+id/textView7"
            android:layout_row="6"
            android:layout_column="1" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_row="6"
            android:layout_column="2"
            android:spinnerMode="dropdown"
            android:entries="@array/questions1"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer 1:"
            android:id="@+id/textView6"
            android:layout_row="7"
            android:layout_column="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:layout_row="7"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question 2:"
            android:id="@+id/textView8"
            android:layout_row="8"
            android:layout_column="1" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner2"
            android:layout_row="8"
            android:layout_column="2"
            android:spinnerMode="dropdown"
            android:entries="@array/questions2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer 2:"
            android:id="@+id/textView9"
            android:layout_row="9"
            android:layout_column="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText4"
            android:layout_row="9"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:onClick="onSubmitQuestion"
            android:id="@+id/button2"
            android:layout_row="10"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input Name"
            android:id="@+id/textView3"
            android:layout_row="12"
            android:layout_column="1" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Input Username here"
            android:ems="10"
            android:id="@+id/editText13"
            android:layout_row="12"
            android:layout_column="2" />


    </GridLayout>
</ScrollView>